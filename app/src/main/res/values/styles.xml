<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/turquoise</item>
        <item name="colorPrimaryDark">@color/turquoise</item>
        <item name="colorAccent">@color/turquoise</item>
        <!--   <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorBaseWhite</item>
           <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->

    </style>

    <style name="Panel">
        <item name="android:background">@color/white</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="PanelHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PanelBodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PanelChildHorizontalScrollViewItem">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/light_grey</item>
    </style>

</resources>